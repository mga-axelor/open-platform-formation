<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="base" package="com.axelor.base.db"/>

  <entity name="TestModel">

    <string name="stringTest" title="Sequence" namecolumn="true" required="true"
      unique="true"/>

    <string name="booleanTest" title="Validated?" nullable="false" default="false"/>

    <date name="dateTest" title="validationDate" copy="false" help="This field is a test !"/>

    <datetime name="datetimeTest" title="limitDateT" tz="true"/>

    <decimal name="decimalTest" title="completionPercent" min="0" max="100"/>

    <integer name="integerTest" title="Status" nullable="true"/>

    <long name="testLong" title="Computed field" transient="true"/>

    <time name="time" title="Duration"/>


    <one-to-one name="o2oTest" title="Hair (additional facultative attributes)"
      ref="com.axelor.base.db.TestRelatedModel"/>

    <one-to-many name="o2mTest" title="Matematical tree childs"
      ref="com.axelor.base.db.TestRelatedModel" mappedBy="m2oTestRelated" orphanRemoval="false"/>

    <many-to-one name="m2oTest" title="Simple to a related object"
      ref="com.axelor.base.db.TestRelatedModel"/>

    <many-to-many name="m2mTest" title="Multiple links to related objects"
      ref="com.axelor.base.db.TestRelatedModel" orderBy="code"/>


    <extra-imports> <![CDATA[
      import org.slf4j.*;
      import java.util.*;
    ]]></extra-imports>

    <extra-code><![CDATA[
      // Define constants
      public static final int INT_CONSTANT = 8;
      public static final String STRING_CONSTANT = "Contante de test";
    ]]></extra-code>

    <track on="ALWAYS">

      <field name="integerTest" on="UPDATE"/>

      <message if="booleanTest == true" tag="important">Validation</message>
      <content if="booleanTest == true">This test object has been successfully validated!</content>

    </track>

  </entity>

</domain-models>
