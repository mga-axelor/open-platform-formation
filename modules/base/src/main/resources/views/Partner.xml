<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="partner-grid" title="Partners" model="com.axelor.base.db.Partner" orderBy="id">
    <field name="partnerSeq"/>
    <field name="typeSelect"/>
    <field name="civility"/>
    <field name="firstName"/>
    <field name="name"/>
    <field name="mainPhoneNumber"/>
    <field name="secondaryPhoneNumber"/>
  </grid>

  <cards name="partner-cards" model="com.axelor.base.db.Partner" title="Partners">
    <field name="partnerSeq"/>
    <field name="typeSelect"/>
    <field name="civility"/>
    <field name="civility.code"/>
    <field name="firstName"/>
    <field name="name"/>
    <field name="mainPhoneNumber"/>
    <field name="secondaryPhoneNumber"/>
    <template>
    <![CDATA[
      <div class="span12"><strong>{{partnerSeq}}</strong></div>
      <div class="span8">
        <span>
          {{civility.code}} {{firstName}} {{name}}<br/>
        </span>
        <span>
          {{mainPhoneNumber}}<br/>
          {{secondaryPhoneNumber}}<br/>
        </span>
      </div>
    ]]>
    </template>
  </cards>

  <form name="partner-form" title="Partner" model="com.axelor.base.db.Partner" width="large">
    <panel name="generalInformationPanel" itemSpan="4" canCollapse="true">
      <field name="partnerSeq" colSpan="8"/>
      <field name="typeSelect"/>
      <field name="civility" canNew="true"/>
      <field name="firstName"/>
      <field name="name"/>
    </panel>

    <panel-tabs name="contactPanelTabs">

      <panel-related field="addressList" grid-view="address-grid"
        form-view="address-form"/>

      <panel-related field="emailAddressList" grid-view="email-address-grid"
        form-view="email-address-form"/>

      <panel name="phonePanel" title="Phones">
        <field name="mainPhoneNumber"/>
        <field name="secondaryPhoneNumber"/>
      </panel>

    </panel-tabs>

    <panel name="sidePanel" sidebar="true" showIf="id">
      <field name="createdBy" grid-view="user-grid" form-view="user-form"/>
      <field name="createdOn"/>
      <field name="updatedBy" showIf="updatedBy != null" grid-view="user-grid"
        form-view="user-form"/>
      <field name="updatedOn" showIf="updatedBy != null"/>
    </panel>
  </form>

</object-views>
