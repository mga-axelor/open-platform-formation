<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="address-grid" title="Addresses" model="com.axelor.base.db.Address">
    <field name="streetAndNumber"/>
    <field name="zip"/>
    <field name="country"/>
    <field name="priority"/>
    <field name="isOutdated"/>
  </grid>


  <form name="address-form" title="Address" model="com.axelor.base.db.Address">
    <panel name="mainPanel">
      <field name="streetAndNumber"/>
      <field name="zip" grid-view="zip-grid" form-view="zip-form"/>
      <field name="country" grid-view="country-grid" form-view="country-form"/>
      <field name="priority"/>
      <field name="isOutdated"/>
      <field name="additionalDeliveryInformation"/>
    </panel>
  </form>

</object-views>
